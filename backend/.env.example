# AgentScope Backend Configuration

# Application
APP_NAME=AgentScope Backend
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_TOKEN=your-api-token-here
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ENABLED=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Body Size Limits
MAX_BODY_SIZE=10485760  # 10MB in bytes

# Database
DATABASE_URL=sqlite:///./agent_cockpit.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/agent_cockpit

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# AgentScope
AGENTSCOPE_MODEL=gpt-4
AGENTSCOPE_TEMPERATURE=0.7
AGENTSCOPE_MAX_TOKENS=2000

# OpenAI
OPENAI_API_KEY=your-openai-key-here

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-key-here

# Google AI
GOOGLE_API_KEY=your-google-key-here

# Audit Log
AUDIT_LOG_ENABLED=True
AUDIT_LOG_FILE=logs/audit.log

# Monitoring
METRICS_ENABLED=True
HEALTH_CHECK_ENABLED=True
